<p id="notice"><%= notice %></p>

<section class="content-header">
  <h1>
    Gifts
    <small>Example 2.0</small>
  </h1>
</section>

<section class="content">

<div class="box box-info">
  <div class="box-header with-border">
    <h3 class="box-title">Latest Orders</h3>

  </div>

          <!-- /.box-header -->
<div class="box-body">
  <div class="table-responsive">

      <table class="table no-margin">
        <thead>
          <tr>
            <th>Name gift</th>
            <th>Link gift</th>
            <th>Price gift</th>
            <th>User</th>
            <th colspan="3"></th>
          </tr>
        </thead>

          <tbody>
            <% @gifts.each do |gift| %>
              <tr>
                <td><%= image_tag gift.image , alt: "Mon image", width: 64, height: 64 %></td>
                <td><%= gift.name_gift %></td>
                <td><%= gift.link_gift %></td>
                <td><%= gift.price_gift %></td>
                <td><%= gift.user.id %></td>
                <td><%= link_to 'Show', gift %></td>
                <td><%= link_to 'Edit', edit_gift_path(gift) %></td>
                <td><%= link_to 'Destroy', gift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
    </table>
  </div>
</div>
   <div class="box-footer clearfix">
              <%= link_to 'New Gift', new_gift_path ,class: 'btn btn-sm btn-info btn-flat pull-right' %>
   </div>
</div>
</section>
<br>

